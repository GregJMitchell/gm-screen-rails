<%= form_with model: @quest, url: params[:id] ? campaign_quest_path(@campaign, @quest) : campaign_quests_path(@campaign), local: true, class: 'QuestForm Form' do |form| %>
  <h1>Create a New Player Character</h1>

  <div class='form-container m-2'>
    <div class="form-group m-2 text-center">
      <label for="#name">Quest Name <sup class='text-danger'>* required</sup></label>
      <%= form.text_field :name, placeholder: "Quest Name", class: "form-control" %>
    </div>

    <div class="form-group m-2 text-center">
      <label for="#description">Quest Description</label>
      <%= form.text_area :description, placeholder: "Quest Description", class: "text-area form-control", rows: 10 %>
    </div>

    <div class="form-group m-2 text-center">
      <label for="#description">Quest Rewards</label>
      <%= form.text_area :rewards, placeholder: "Quest Rewards", class: "text-area form-control", rows: 10 %>
    </div>

    <div class="form-group m-2 text-center">
      <label for="#description">Add Quest to Storylines</label>
      <%= form.collection_select(:storyline_quests_attributes, @campaign.storylines, :id, :name,{}, { class: 'form-control', multiple: true }) %>
    </div>

    <div class="form-group m-1 text-center">
      <%= form.submit  class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>