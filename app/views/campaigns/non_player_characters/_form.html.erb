<%= form_with model: @non_player_character, url: params[:id] ? campaign_non_player_character_path(@campaign, @non_player_character) : campaign_non_player_characters_path(@campaign), local: true, class: 'PlayerCharacterForm' do |form| %>
  <h1>Create a New Non-Non-Player Character</h1>

  <div class='form-container m-2'>
    <div class="form-group m-2 text-center">
      <label for="#name">Non-Player Character Name <sup class='text-danger'>* required</sup></label>
      <%= form.text_field :name, placeholder: "Non-Player Character Name", class: "form-control" %>
    </div>

    <div class="form-group m-2 text-center">
      <label for="#race">Non-Player Character Race</label>
      <%= form.text_field :race, placeholder: "Non-Player Character Race", class: "form-control" %>
    </div>

    <div class="form-group m-2 text-center">
      <div class='stat-container'>
        <div class='stat m-2'>
          <label for="#alignment_id">Alignment</label>
          <%= form.collection_select :alignment_id, Alignment.all, :id, :name, {include_blank: 'Select Alignment'}, {multiple: false, class: 'form-control stat-select'} %>
        </div>
        <div class='stat m-2'>
          <label for="#size_category_id">Size</label>
          <%= form.collection_select :size_category_id, SizeCategory.all, :id, :name, {include_blank: 'Select Size'}, {multiple: false, class: 'form-control stat-select'} %>
        </div>
        <div class='stat m-2'>
          <label for="#monster_type_id">Type</label>
          <%= form.collection_select :monster_type_id, MonsterType.all, :id, :name, {include_blank: 'Select Type'}, {multiple: false, class: 'form-control stat-select'} %>
        </div>
        <div class='stat m-2'>
          <label for="#challenge_rating">Challenge Rating</label>
          <%= form.text_field :challenge_rating, {class: 'form-control',} %>
        </div>
      </div>
    </div>


    <div class="form-group m-2 text-center">
      <label for="#race">Stat Block Url</label>
      <%= form.text_field :stat_block_url, placeholder: "Stat Block Url", class: "form-control" %>
    </div>

    <div class="form-group m-1 text-center">
      <%= form.submit  class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>