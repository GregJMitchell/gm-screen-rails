<section class='Campaigns m-2'>
  <div class='d-flex m-1 justify-content-between align-items-center'>
  <h1>Your Campaigns</h1>
  <div>
    <%= link_to '+ Add new', new_campaign_path, class: 'btn btn-primary' %>
  </div>
  </div>
  <div class="campaign-card-row">
    <% @campaigns.each do |camp| %>
      <div id='campaign-<%= camp.id %>' class="card bg-dark border rounded border-secondary m-1">
        <div class="card-body">
          <%= link_to camp.title, campaign_path(camp), class: 'btn btn-link p-0' %>
          <p class="card-text"><%= camp.description %></p>
        </div>
        <div class="card-footer campaign-card-footer">
          <small class="text-muted">Last updated <%= format_minutes(camp.last_updated) %></small>
          <div class='campaign-card-nav'>
            <%= link_to 'View', campaign_path(camp), class: 'm-1 btn btn-outline-primary btn-sm' %>
            <%= link_to 'Edit', edit_campaign_path(camp), class: 'm-1 btn btn-outline-secondary btn-sm' %>
            <%= button_to 'Delete', campaign_path(camp), method: :delete, class: 'm-1 btn btn-outline-danger btn-sm', data: {confirm: 'Are you sure?'} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>